<!-- views/mensajeros/edit.ejs -->
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Mensajero</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<body>
    <div class="container" style="margin-top: 20px;">

        <h1>Editar Mensajero</h1>
        <form action="/mensajeros/update/<%= mensajero._id %>" method="post">
            <label for="nombre">Nombre:</label>
            <input type="text" class="form-control" name="nombre" value="<%= mensajero.nombre %>" required>

            <label for="vehiculo">Selecciona un veh√≠culo:</label>
            <select name="vehiculo" class="form-select" id="vehiculo" required>
                <% vehiculos.forEach((vehiculo)=> { %>
                    <option value="<%= vehiculo._id %>" <%=(mensajero.vehiculo &&
                        mensajero.vehiculo._id.toString()===vehiculo._id.toString()) ? 'selected' : '' %>><%=
                            vehiculo.modelo %> - <%= vehiculo.tipo %>
                    </option>
                    <% }); %>
            </select>

            <button class="mt-2 btn btn-primary" type="submit">Guardar Cambios</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

</body>

</html>