<!-- views/envios/update.ejs -->
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actualizar Envío</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
</head>

<body>
    <div class="container" style="margin-top: 20px;">

        <h1>Actualizar Envío</h1>
        <!-- Formulario para actualizar un envío -->
        <form action="/envios/update/<%= envio._id %>" method="post">
            <label for="actividad">Actividad:</label>
            <input type="text" class="form-control" name="actividad" value="<%= envio.actividad %>" required>

            <label for="destinatario">Destinatario:</label>
            <input type="text" class="form-control" name="destinatario" value="<%= envio.destinatario %>" required>

            <label for="mensajeroId">Selecciona un mensajero:</label>
            <select name="mensajeroId" class="form-select" required>
                <% mensajeros.forEach((mensajero)=> { %>
                    <option value="<%= mensajero._id %>" <%=envio.mensajero &&
                        envio.mensajero._id.toString()===mensajero._id.toString() ? 'selected' : '' %>>
                        <%= mensajero.nombre %>
                    </option>
                    <% }); %>
            </select>

            <button class="mt-2 btn btn-primary" type="submit">Actualizar Envío</button>
            <button class="mt-2 btn btn-primary"><a class="text-decoration-none link-light" href="/envios">Volver a la Lista de Envíos</a></button>
        </form>
       
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>