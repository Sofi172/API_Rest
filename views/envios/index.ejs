 

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Vehículos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>


<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/mensajeros"> Mensajeros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/vehiculos"> Vehiculos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-10">
                <h1>Lista de Envíos</h1>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-2 pt-4">
                        <button type="button" class="btn btn-primary">
                            <a class="text-decoration-none link-light" href="/envios/create">Crear Envio</a>
                        </button>
                    </div>
                    <div class="col-2 pt-4">
                        <button type="button" class="btn btn-danger">
                            <a class="text-decoration-none link-light" href="/envios/pdfE">Exportar PDF</a>
                        </button>
                    </div>
                    <div class="col-2 pt-4">
                        <button type="button" class="btn btn-success">
                            <a class="text-decoration-none link-light" href="/envios/excelE">Exportar Exel</a>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <% if (envios.length> 0) { %>
            <table class="table"  id="example">

                <thead>
                    <tr class="table-dark">

                        <th scope="col">MENSAJERO</th>
                        <th scope="col">ACTIVIDAD </th>
                        <th scope="col">DESTINATARIO</th>
                        <th scope="col">Actualizar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>

                <% envios.forEach(envio=> { %>
                    <tr>
                        <th>
                            <% if (envio.mensajero && envio.mensajero.nombre) { %>
                            <%= envio.mensajero.nombre %>
                            <% } else { %>
                                <!-- Manejo en caso de que envio.mensajero o su propiedad nombre sea null -->
                            <% } %>
                        </th>
                        <th>
                           <%= envio.actividad %>
                        </th>
                        <th>
                            <%= envio.destinatario %>
                        </th>
                        <th>
                            <button type="button" class="btn btn-warning"><a class="text-decoration-none link-light"
                                    href="/envios/edit/<%= envio._id %>">Actualizar</a></button>

                        </th>
                        <th>
                            <button type="button" class="btn btn-danger"><a class="text-decoration-none link-light"
                                    href="/envios/delete/<%= envio._id %>">Eliminar</a></button>
                        </th>
                    </tr>

                    <% }); %>

            </table>
            <% } else { %>
                <p>No hay envio disponibles.</p>
                <% } %>
    </div>

    <footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script>
            new DataTable('#example');
        </script>

    </footer>

</body>

</html>